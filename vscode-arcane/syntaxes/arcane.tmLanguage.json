{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Arcane",
  "scopeName": "source.arcane",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#identifiers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.arcane",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.arcane",
          "match": "\\b(as|anders|terwyl)\\b"
        },
        {
          "name": "keyword.other.arcane",
          "match": "\\b(stel)\\b"
        },
        {
          "name": "support.function.builtin.arcane",
          "match": "\\b(druk)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.arcane",
          "match": "\\b(waar)\\b"
        },
        {
          "name": "constant.language.boolean.false.arcane",
          "match": "\\b(vals)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.arcane",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.arcane",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.arcane",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.arcane",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.arcane",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.arcane",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.arcane",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.arcane",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.group.arcane",
          "match": "[()]"
        }
      ]
    }
  }
}
