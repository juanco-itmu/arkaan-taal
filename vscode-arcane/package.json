{
  "name": "arcane-lang",
  "displayName": "Arcane Language",
  "description": "'n Afrikaanse programmeertaal - Syntax highlighting, snippets, and LSP",
  "version": "0.2.0",
  "publisher": "arcane",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:arcane"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "arcane",
        "aliases": [
          "Arcane",
          "arcane"
        ],
        "extensions": [
          ".arc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/arcane.svg",
          "dark": "./icons/arcane.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "arcane",
        "scopeName": "source.arcane",
        "path": "./syntaxes/arcane.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "arcane",
        "path": "./snippets/arcane.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Arcane",
      "properties": {
        "arcane.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the arcane-lsp executable. Leave empty to use the bundled server."
        }
      }
    },
    "iconThemes": [
      {
        "id": "arcane-icons",
        "label": "Arcane Icons",
        "path": "./arcane-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/arcane-lang"
  },
  "license": "MIT"
}
