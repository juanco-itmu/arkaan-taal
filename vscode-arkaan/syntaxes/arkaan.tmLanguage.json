{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Arkaan",
  "scopeName": "source.arkaan",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#type-constructors" },
    { "include": "#identifiers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.arkaan",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.arkaan",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.arkaan",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.arkaan",
          "match": "\\b(as|anders|terwyl|gee)\\b"
        },
        {
          "name": "keyword.control.pattern.arkaan",
          "match": "\\b(pas|geval)\\b"
        },
        {
          "name": "keyword.declaration.variable.arkaan",
          "match": "\\b(stel|laat|mut)\\b"
        },
        {
          "name": "keyword.declaration.function.arkaan",
          "match": "\\b(funksie|fn)\\b"
        },
        {
          "name": "keyword.declaration.type.arkaan",
          "match": "\\b(tipe)\\b"
        },
        {
          "name": "support.function.builtin.arkaan",
          "match": "\\b(druk|kaart|filter|vou|vir_elk|lengte|kop|stert|voeg_by|is_leeg)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.arkaan",
          "match": "\\b(waar)\\b"
        },
        {
          "name": "constant.language.boolean.false.arkaan",
          "match": "\\b(vals)\\b"
        },
        {
          "name": "constant.language.wildcard.arkaan",
          "match": "\\b_\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.arkaan",
          "match": "(=>|->)"
        },
        {
          "name": "keyword.operator.comparison.arkaan",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.arkaan",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.arkaan",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.arkaan",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.arkaan",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.arkaan",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "type-constructors": {
      "patterns": [
        {
          "name": "entity.name.type.arkaan",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.arkaan",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.arkaan",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.group.arkaan",
          "match": "[()]"
        },
        {
          "name": "punctuation.definition.list.arkaan",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.arkaan",
          "match": ","
        }
      ]
    }
  }
}
