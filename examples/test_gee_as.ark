// Test gee as (conditional return)
// Syntax: gee value as condition [anders else_value]

// Guard clause - return early if condition is true
laat fib = fn(n) {
    gee n as n <= 1
    gee fib(n - 1) + fib(n - 2)
}

druk(fib(10))

// With anders - ternary return
laat abs = fn(x) {
    gee -x as x < 0 anders x
}

druk(abs(-5))
druk(abs(5))

// Guard clause for validation
laat divide = fn(a, b) {
    gee 0 as b == 0
    gee a / b
}

druk(divide(10, 2))
druk(divide(10, 0))

// Multiple guards
laat classify = fn(n) {
    gee "negatief" as n < 0
    gee "nul" as n == 0
    gee "positief"
}

druk(classify(-5))
druk(classify(0))
druk(classify(10))
