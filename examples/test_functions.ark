// Test basic function
laat groet = fn(naam) {
    druk("Hallo, " + naam)
}

groet("Wereld")

// Test function with return value
laat som = fn(a, b) {
    gee a + b
}

laat resultaat = som(3, 4)
druk("3 + 4 = " + resultaat)

// Test recursion (factorial)
laat fakulteit = fn(n) {
    as n <= 1 {
        gee 1
    }
    gee n * fakulteit(n - 1)
}

druk("5! = " + fakulteit(5))

// Test nested calls
laat dubbel = fn(x) {
    gee x * 2
}

laat verdubbel_som = fn(a, b) {
    gee dubbel(som(a, b))
}

druk("dubbel(3+4) = " + verdubbel_som(3, 4))
