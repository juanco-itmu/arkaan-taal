// Test list functionality

// Basic list creation
laat lys = [1, 2, 3, 4, 5]
druk(lys)

// List length
druk(lys -> lengte)

// Access by index
druk(lys[0])
druk(lys[2])

// Negative indexing
druk(lys[-1])
druk(lys[-2])

// Empty list
laat leeg_lys = []
druk(leeg_lys)
druk(leeg_lys -> lengte)

// Head and tail
laat kop_waarde = lys -> kop
druk(kop_waarde)

laat stert_lys = lys -> stert
druk(stert_lys)

// Check if empty
druk(lys -> leeg)
druk(leeg_lys -> leeg)

// Prepend (voeg_by)
laat nuwe_lys = voeg_by(0, lys)
druk(nuwe_lys)

// Append (heg_aan)
laat met_einde = lys -> heg_aan(6)
druk(met_einde)

// Concatenate (ketting)
laat lys_a = [1, 2]
laat lys_b = [3, 4]
laat saam = lys_a -> ketting(lys_b)
druk(saam)

// Reverse (omgekeer)
laat omgedraai = lys -> omgekeer
druk(omgedraai)

// Strings in lists
laat woorde = ["hallo", "wÃªreld", "!"]
druk(woorde)
druk(woorde[1])

// Nested lists
laat geneste = [[1, 2], [3, 4], [5, 6]]
druk(geneste)
druk(geneste[1])
druk(geneste[1][0])
