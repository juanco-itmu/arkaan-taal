// Test global variables
laat x = 10
druk(x)

// Test local variables in a block
{
    laat y = 20
    druk(y)
    druk(x + y)
}

// x is still accessible
druk(x)

// Nested scopes
{
    laat a = 1
    {
        laat b = 2
        druk(a + b)
    }
    // b is out of scope here
    druk(a)
}

// Variable shadowing
laat naam = "buite"
{
    laat naam = "binne"
    druk(naam)
}
druk(naam)
