// Test pipe operator ->
// The pipe operator takes the left side and passes it as the first argument to the right side
// a -> f(b, c) becomes f(a, b, c)

laat getalle = [1, 2, 3, 4, 5]

// Basic pipe: getalle -> kop becomes kop(getalle)
druk(getalle -> kop)

// Pipe with function call: getalle -> kaart(f) becomes kaart(getalle, f)
druk(getalle -> kaart(fn(x) x * 2))

// Chained pipes work left-to-right
// getalle -> kaart(f) -> filter(g) becomes filter(kaart(getalle, f), g)
laat result = getalle -> kaart(fn(x) x * 2) -> filter(fn(x) x > 5)
druk(result)

// Complex pipeline: filter even, square them, sum
laat som = getalle -> filter(fn(x) x % 2 == 0) -> kaart(fn(x) x * x) -> vou(0, fn(a, x) a + x)
druk(som)

// Pipe to lambda expression
laat dubbel = 5 -> (fn(x) x * 2)
druk(dubbel)

// Pipes work with any expression on the left
laat som_verdubbel = (1 + 2 + 3) -> (fn(x) x * 2)
druk(som_verdubbel)

// Pattern matching still uses => (not ->)
laat getal = 2
laat naam = pas (getal) {
    geval 1 => "een"
    geval 2 => "twee"
    geval _ => "ander"
}
druk(naam)
