// Test immutable bindings
// All bindings in Arkaan are immutable (constants)

// laat creates an immutable binding
laat x = 10
druk(x)

// Shadowing in inner scopes is allowed
{
    laat x = 20
    druk(x)  // 20 (inner scope)
}
druk(x)  // 10 (original value)

// Functions can shadow outer variables
laat demonstreer = fn() {
    laat x = 30
    druk(x)  // 30 (function scope)
}
demonstreer()
druk(x)  // 10 (still original)

// Function parameters are also immutable
laat probeer = fn(n) {
    // n = 42  // Would fail: cannot reassign immutable parameter
    druk(n)
}
probeer(100)

// Nested scopes with shadowing
laat naam = "buite"
{
    laat naam = "binne"
    druk(naam)  // binne
    {
        laat naam = "diep binne"
        druk(naam)  // diep binne
    }
    druk(naam)  // binne
}
druk(naam)  // buite

druk("Toets geslaag!")
